{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RunStack",
  "version": "0.1.0",
  "identifier": "com.andresbedoyag.runstack",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "RunStack",
        "label": "main",
        "url": "/",
        "width": 1400,
        "height": 900,
        "minWidth": 1020,
        "minHeight": 600,
        "fullscreen": false,
        "resizable": true,
        "center": true,
        "hiddenTitle": true,
        "titleBarStyle": "Transparent"
      }
    ],
    "security": {
      "csp": "default-src 'self' asset: ipc:; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://www.nerdfonts.com; font-src 'self' https://www.nerdfonts.com data:; img-src 'self' asset: data: blob:; connect-src 'self' ipc: http://localhost:* ws://localhost:*;"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "© 2025 Andrés Bedoya Garcés",
    "category": "DeveloperTool",
    "shortDescription": "Manage and run your Node.js, Deno and Bun projects",
    "longDescription": "RunStack - A desktop application to manage and run your development projects. Built with Tauri, React, and TypeScript.",
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "10.15",
      "signingIdentity": null,
      "hardenedRuntime": true
    }
  }
}
