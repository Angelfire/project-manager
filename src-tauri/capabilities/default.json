{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "dialog:allow-open",
    "shell:allow-kill",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "npm",
          "cmd": "npm",
          "args": true
        },
        {
          "name": "pnpm",
          "cmd": "pnpm",
          "args": true
        },
        {
          "name": "yarn",
          "cmd": "yarn",
          "args": true
        },
        {
          "name": "bun",
          "cmd": "bun",
          "args": true
        },
        {
          "name": "deno",
          "cmd": "deno",
          "args": true
        },
               {
                 "name": "kill",
                 "cmd": "kill",
                 "args": true
               },
               {
                 "name": "lsof",
                 "cmd": "lsof",
                 "args": true
               },
        {
          "name": "pgrep",
          "cmd": "pgrep",
          "args": true
        },
        {
          "name": "ps",
          "cmd": "ps",
          "args": true
        }
      ]
    }
  ]
}